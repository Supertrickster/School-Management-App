@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="error-container text-center">
    <div class="error-icon">
        <i class="fas fa-exclamation-triangle"></i>
    </div>
    <h1 class="display-1 fw-bold">Oops!</h1>
    <h2 class="text-danger mb-3">An error occurred while processing your request.</h2>
    <p class="lead text-muted col-md-8 mx-auto">
        We're sorry for the inconvenience. Please try again, or return to the homepage to continue.
    </p>
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="fas fa-home me-2"></i>Go to Homepage
        </a>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="request-id-container mt-5">
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
            <small class="text-muted">This information is helpful for our technical team to diagnose the issue.</small>
        </div>
    }
</div>