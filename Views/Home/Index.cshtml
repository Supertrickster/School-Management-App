@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">Dashboard</h1>
        <p class="text-muted">Welcome back! Here's an overview of your school's activity.</p>
    </div>
    <span class="text-muted fs-6">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</span>
</div>

<div class="row mb-4">
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-start border-primary border-4 shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Students</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">1,254</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-graduate fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-start border-success border-4 shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Active Courses</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">82</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-book fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-start border-info border-4 shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-info text-uppercase mb-1">Faculty Members</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">58</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 fw-bold text-primary"><i class="fas fa-chart-bar me-2"></i>Top 5 Course Enrollments</h6>
            </div>
            <div class="card-body">
                <div style="height:350px">
                    <canvas id="enrollmentChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 fw-bold text-primary"><i class="fas fa-bolt me-2"></i>Quick Actions</h6>
            </div>
            <div class="card-body">
                <p>Quickly access common tasks.</p>
                <a asp-controller="Students" asp-action="Create" class="btn btn-success d-block mb-2"><i class="fas fa-user-plus me-2"></i>Add New Student</a>
                <a asp-controller="Courses" asp-action="Create" class="btn btn-info d-block text-white mb-2"><i class="fas fa-plus-circle me-2"></i>Create New Course</a>
                <a asp-controller="Lecturers" asp-action="Index" class="btn btn-secondary d-block"><i class="fas fa-users me-2"></i>View All Lecturers</a>
            </div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 fw-bold text-primary"><i class="fas fa-bullhorn me-2"></i>Announcements</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <strong>Parent-Teacher Meetings:</strong> Scheduled for next Friday.
                </div>
                <div class="alert alert-info" role="alert">
                    <strong>System Update:</strong> Scheduled maintenance this Sunday at 2 AM.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function () {
            // Bar Chart Example with static data
            var ctx = document.getElementById("enrollmentChart").getContext('2d');
            var enrollmentChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ["Calculus I", "Physics II", "History 101", "English Lit", "Computer Science"],
                    datasets: [{
                        label: "Enrollments",
                        backgroundColor: "#4e73df",
                        hoverBackgroundColor: "#2e59d9",
                        borderColor: "#4e73df",
                        data: [120, 98, 75, 62, 55],
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            grid: { display: false }
                        },
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });
        });
    </script>
}