@model SchoolManagementApp.MVC.Data.Course

@{
    ViewData["Title"] = "Edit Course";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Courses" asp-action="Index">Courses</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Course</li>
    </ol>
</nav>

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="mb-0"><i class="fas fa-pencil-alt me-2"></i>Edit Course: @Model.Name</h3>
    </div>
    <div class="card-body">
        <form id="editCourseForm" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Enter course name" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Code" class="form-control" placeholder="Enter course code" />
                        <label asp-for="Code"></label>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Credits" type="number" class="form-control" placeholder="Enter credits" />
                        <label asp-for="Credits"></label>
                        <span asp-validation-for="Credits" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
        <button type="submit" form="editCourseForm" class="btn btn-warning"><i class="fas fa-save me-2"></i>Save Changes</button>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}