@model SchoolManagementApp.MVC.Data.Course

@{
    ViewData["Title"] = "Confirm Deletion";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Courses" asp-action="Index">Courses</a></li>
        <li class="breadcrumb-item active" aria-current="page">Confirm Deletion</li>
    </ol>
</nav>

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion</h3>
    </div>
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to permanently delete this course?</h5>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Course Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Course Code</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Code)</dd>

            <dt class="col-sm-3">Credits</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Credits)</dd>
        </dl>

        <div class="alert alert-danger mt-4" role="alert">
            <strong>Warning:</strong> This action cannot be undone. A course cannot be deleted if it is part of a scheduled class.
        </div>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i>Cancel</a>
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Yes, Delete</button>
        </form>
    </div>
</div>