@model SchoolManagementApp.MVC.Data.Lecturer

@{
    ViewData["Title"] = "Lecturer Profile";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Lecturers" asp-action="Index">Lecturers</a></li>
        <li class="breadcrumb-item active" aria-current="page">Lecturer Profile</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Lecturer Profile</h1>
    <div>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id"><i class="fas fa-pencil-alt me-2"></i>Edit Profile</a>
        <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="text-center mb-4">
            <div class="profile-avatar mx-auto mb-3">
                @(Model.FirstName[0])@(Model.LastName[0])
            </div>
            <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
            <p class="text-muted">Lecturer ID: @Model.Id</p>
        </div>

        <hr />

        <h5 class="card-title mb-3">Personal Details</h5>
        <dl class="row">
            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>
        </dl>
    </div>
</div>