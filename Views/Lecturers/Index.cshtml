@model IEnumerable<SchoolManagementApp.MVC.Data.Lecturer>

@{
    ViewData["Title"] = "Faculty Directory";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="fas fa-chalkboard-teacher me-2"></i>Faculty Directory</h3>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus me-2"></i>Add New Lecturer</a>
    </div>
    <div class="card-body">
        <table id="lecturersTable" class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar me-3">@(item.FirstName[0])@(item.LastName[0])</div>
                                <div>
                                    <div class="fw-bold">@item.FirstName @item.LastName</div>
                                </div>
                            </div>
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.Id" title="Details">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <button data-id="@item.Id" class="btn btn-outline-danger btn-sm deleteBtn" type="button" title="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form asp-action="Delete" id="lecturerDeleteForm" method="post">
    <input type="hidden" id="lecturerId" name="Id" />
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            // 1. Initialize the interactive DataTable
            var table = $('#lecturersTable').DataTable({
                "columnDefs": [
                    { "orderable": false, "targets": 1 } // Disable sorting on 'Actions' column
                ]
            });

            // 2. Handle the delete button click
            $('#lecturersTable').on('click', '.deleteBtn', function () {
                var id = $(this).data("id"); // Get the ID from the button

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // If confirmed, set the ID in the hidden form and submit it.
                        $('#lecturerId').val(id);
                        $('#lecturerDeleteForm').submit();
                    }
                });
            });
        });
    </script>
}