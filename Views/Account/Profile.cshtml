@model SchoolManagementApp.MVC.Models.UserProfileViewModel

@{
    ViewData["Title"] = "User Profile";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">User Profile</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-4">
        <div class="card shadow-sm mb-4">
            <div class="card-body text-center">
                <img src="@Model.ProfileImage" alt="User Profile Picture" class="profile-picture rounded-circle mb-3">
                <h4 class="card-title">@Model.Name</h4>
                <p class="text-muted">@Model.EmailAddress</p>
            </div>
        </div>
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Account Actions</h5>
            </div>
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-key me-2"></i>Change Password</a>
                <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-shield-alt me-2"></i>Two-Factor Authentication</a>
                <a href="#" class="list-group-item list-group-item-action text-danger"><i class="fas fa-trash-alt me-2"></i>Delete Account</a>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-user-edit me-2"></i>Edit Profile Details</h5>
            </div>
            <div class="card-body">
                <form id="editProfileForm">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" placeholder="Full Name" />
                                <label asp-for="Name">Full Name</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <input asp-for="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                                <label asp-for="EmailAddress">Email Address</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <input type="text" id="phoneNumber" class="form-control" placeholder="Phone Number" value="(123) 456-7890" />
                                <label for="phoneNumber">Phone Number (Example)</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-end">
                <button type="submit" form="editProfileForm" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // Add validation scripts if needed
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}