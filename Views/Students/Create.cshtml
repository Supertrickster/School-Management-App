@model SchoolManagementApp.MVC.Data.Student

@{
    ViewData["Title"] = "Create Student";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Students" asp-action="Index">Students</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create New Student</li>
    </ol>
</nav>

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="mb-0"><i class="fas fa-user-plus me-2"></i>Add New Student Record</h3>
    </div>
    <div class="card-body">
        <form id="createStudentForm" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                        <label asp-for="FirstName"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                        <label asp-for="LastName"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
                        <input asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
        <button type="submit" form="createStudentForm" class="btn btn-primary"><i class="fas fa-check-circle me-2"></i>Create Student</button>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}