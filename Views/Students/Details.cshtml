@model SchoolManagementApp.MVC.Data.Student

@{
    ViewData["Title"] = "Student Profile";
    // Helper function to calculate age
    Func<DateTime?, int?> GetAge = dob =>
    {
        if (!dob.HasValue) return null;
        var today = DateTime.Today;
        var age = today.Year - dob.Value.Year;
        if (dob.Value.Date > today.AddYears(-age)) age--;
        return age;
    };
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Students" asp-action="Index">Students</a></li>
        <li class="breadcrumb-item active" aria-current="page">Student Profile</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Student Profile</h1>
    <div>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id"><i class="fas fa-pencil-alt me-2"></i>Edit Profile</a>
        <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card shadow-sm mb-4 text-center">
            <div class="card-body">
                <div class="profile-avatar mx-auto mb-3">
                    @(Model.FirstName[0])@(Model.LastName[0])
                </div>
                <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
                <p class="text-muted">Student ID: @Model.Id</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                    <strong>First Name</strong>
                    <span>@Model.FirstName</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <strong>Last Name</strong>
                    <span>@Model.LastName</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <strong>Date of Birth</strong>
                    <span>@(Model.DateOfBirth.HasValue? Model.DateOfBirth.Value.ToString("dd MMM, yyyy") : "N/A")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <strong>Age</strong>
                    <span>@(GetAge(Model.DateOfBirth).HasValue ? $"{GetAge(Model.DateOfBirth)} years" : "N/A")</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-book-reader me-2"></i>Academic Record</h5>
            </div>
            <div class="card-body">
                <h6 class="card-title">Enrolled Courses (Example)</h6>
                <p class="card-text text-muted">This is an example showing currently enrolled courses. This can be expanded with real data.</p>
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        Calculus I
                        <span class="badge bg-success rounded-pill">A-</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        Physics II
                        <span class="badge bg-primary rounded-pill">In Progress</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        History 101
                        <span class="badge bg-success rounded-pill">A</span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        English Literature
                        <span class="badge bg-warning rounded-pill">B+</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>