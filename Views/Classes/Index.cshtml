@model IEnumerable<SchoolManagementApp.MVC.Data.Class>

@{
    ViewData["Title"] = "Class Management";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="fas fa-school me-2"></i>Class Schedules</h3>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus me-2"></i>Create New Class</a>
    </div>
    <div class="card-body">
        <table id="classesTable" class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Course</th>
                    <th>Lecturer</th>
                    <th>Time</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Course.Code - @item.Course.Name
                        </td>
                        <td>
                            @item.Lecturer.FirstName @item.Lecturer.LastName
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td class="text-end">
                            <a asp-action="ManageEnrollments" class="btn btn-primary btn-sm" asp-route-classId="@item.Id">
                                <i class="fas fa-users me-2"></i>Manage Enrollments
                            </a>
                            <div class="btn-group">
                                <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fas fa-info-circle me-2"></i>Details
                                            </a>
                                        </li>
                                        <li>
                                            <button data-id="@item.Id" class="dropdown-item text-danger deleteBtn" type="button">
                                                <i class="fas fa-trash-alt me-2"></i>Delete
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form asp-action="Delete" id="classDeleteForm" method="post">
    <input type="hidden" id="classId" name="Id" />
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            // 1. Initialize the interactive DataTable
            $('#classesTable').DataTable();

            // 2. Handle the delete button click
            $('#classesTable').on('click', '.deleteBtn', function () {
                var id = $(this).data("id"); // Get the ID from the button

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // If confirmed, set the ID in the hidden form and submit it.
                        // This is a standard form submission, NOT AJAX.
                        $('#classId').val(id);
                        $('#classDeleteForm').submit();
                    }
                });
            });
        });
    </script>
}