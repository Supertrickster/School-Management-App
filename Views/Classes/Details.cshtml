@model SchoolManagementApp.MVC.Data.Class

@{
    ViewData["Title"] = "Class Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Classes" asp-action="Index">Classes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Class Details</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Class Details</h1>
    <div>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id"><i class="fas fa-pencil-alt me-2"></i>Edit Class</a>
        <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">
            <i class="fas fa-chalkboard me-2"></i>
            @Model.Course.Code - @Model.Course.Name
        </h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Lecturer</dt>
            <dd class="col-sm-9">@Model.Lecturer.FirstName @Model.Lecturer.LastName</dd>

            <dt class="col-sm-3">Scheduled Time</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Time)</dd>

            <dt class="col-sm-3">Course Credits</dt>
            <dd class="col-sm-9">@Model.Course.Credits</dd>
        </dl>
    </div>
</div>