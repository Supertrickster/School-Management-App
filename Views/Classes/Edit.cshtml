@model SchoolManagementApp.MVC.Data.Class

@{
    ViewData["Title"] = "Edit Class";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Classes" asp-action="Index">Classes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Class</li>
    </ol>
</nav>

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Edit Class Schedule</h3>
    </div>
    <div class="card-body">
        <form id="editClassForm" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CourseId" class="form-label fw-bold"></label>
                    <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId"></select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="LecturerId" class="form-label fw-bold"></label>
                    <select asp-for="LecturerId" class="form-select" asp-items="ViewBag.LecturerId"></select>
                    <span asp-validation-for="LecturerId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Time" class="form-label fw-bold"></label>
                    <input asp-for="Time" type="time" class="form-control" />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
        <button type="submit" form="editClassForm" class="btn btn-warning"><i class="fas fa-save me-2"></i>Save Changes</button>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}